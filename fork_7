#include<stdio.h>
#include<stdlib.h>
#include<unistd.h>
#include<sys/wait.h>
#include<sys/types.h>

main(){
//Dichiarazione processo;
pid_t pid;
//Dichiarazione variabili;
int n;
int i;
//insrimento del numero di processi;
do{
    printf("\n inserisci un numero compreso tra 1 e 5");
    scanf("%d",&n);
}
 while((n<1)||(n>5));

 printf("Padre:il mio PID Ã¨:%d \n",getpid());

 for(i=1;i<=n;i++){
                    pid=fork();
                    if(pid==0){
                    sleep(1);
                   printf("pid figlio:%d pid padre: %d \n",getpid(),getppid());
                  }
}
exit;
}

           
